@model MByte.Models.ViewItemEditModel

@{
    ViewBag.Title = "ItemCreate";
}

<h2>ItemCreate</h2>
<div>
    <form id="productForm" method="POST" action="/Item/ItemCreate">
        <fieldset>
            <div>
                @Html.DropDownList("catid", new SelectList(Model.MyCategories.Select(x => new { Value = x.Id, Text = x.name }), "Value", "Text"))
            </div>

            <div>
                <label class="col-sm-3">Item Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3">Price</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="price">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3">Description</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="description">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3">ImageURL</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" name="imageurl">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3">IsActive</label>
                <div class="col-sm-8">
                    <input type="checkbox" class="form-control" name="isactive" value="true">
                    <input type="hidden" class="form-control" name="isactive" value="false">                 
                </div>
            </div>

            <div style="text-align: right; padding: 15px 95px 15px 15px;">
                <button type="submit" class="btn btn-success edit-btn">Add Item</button>
            </div>
        </fieldset>
    </form>
</div>
